<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/app_toolbar"
        layout="@layout/app_toolbar" />

    <com.nirhart.parallaxscroll.views.ParallaxScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:parallax_factor="1.9"
        tools:context=".MainActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/dcomp_titulo_tv"
                android:layout_width="match_parent"                
                android:text="Titulo"
                android:textSize="30sp"
                android:layout_height="100dp"
                android:background="#7E57C2"
                android:textColor="@android:color/white"
                android:gravity="center"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@android:color/white"
                android:orientation="vertical" >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/ic_timetable"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="Data"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dt_inicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:text="11/05/2015"
                    android:textSize="13sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/ic_library_books"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="Descrição"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/descricao_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:text="Testando essa Budega"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/ic_account_switch"
                    android:gravity="bottom"
                    android:padding="5dp"
                    android:text="Relacionados"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/relac_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="@android:color/white"
                    android:padding="5dp"
                    android:text="Debora Tucano"
                    android:textSize="22sp" />

            </LinearLayout>
        </LinearLayout>
    </com.nirhart.parallaxscroll.views.ParallaxScrollView>

</LinearLayout>
