<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easy.gpessoal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContatosActivity"
            android:label="Contatos" >
        </activity>
        <activity
            android:name=".NovoCompromissoActivity"
            android:label="Novo Compromisso" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" >
            </meta-data>
        </activity>
        <activity
            android:name=".DetalhesContatosActivity"
            android:label="@string/title_activity_detalhes_contatos" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" >
            </meta-data>
        </activity>
        <activity
            android:name=".DetalhesCompromissosActivity"
            android:label="@string/title_activity_detalhes_compromissos" >
           <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" >
            </meta-data>
        </activity>
        <activity
            android:name=".EmpresaActivity"
            android:label="@string/title_activity_empresa" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>